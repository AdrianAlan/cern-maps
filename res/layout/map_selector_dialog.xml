<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:background="@color/cern_blue"
    android:padding="0dp" >

    <TextView
        android:id="@+id/boxTitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/cern_transparent"
        android:gravity="center_vertical"
        android:text="@string/SelectView"
        android:textColor="@color/cern_white"
        android:textSize="22sp" />

    <ListView
        android:id="@+id/selectMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boxTitle"
        android:layout_gravity="start"
        android:background="@drawable/selector_nav"
        android:choiceMode="singleChoice"
        android:divider="@color/cern_greyed"
        android:dividerHeight="1dp"
        android:paddingEnd="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingStart="15dp" />

</RelativeLayout>