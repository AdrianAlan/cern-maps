<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/selector_navigation"
    android:paddingBottom="5dp"
    android:paddingTop="2dp" >

    <ImageButton
        android:id="@+id/personIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/gps"
        android:contentDescription="@string/icon"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/personTitle"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/personIcon"
        android:layout_toRightOf="@+id/personIcon"
        android:gravity="center_vertical"
        android:textColor="@color/cern_white"
        android:textSize="@dimen/text_normal" />

    <TextView
        android:id="@+id/personDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personTitle"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:layout_toEndOf="@+id/personIcon"
        android:layout_toRightOf="@+id/personIcon"
        android:gravity="center_vertical"
        android:textColor="@color/cern_white"
        android:textSize="@dimen/text_small" />

</RelativeLayout>