<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/selector_navigation"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="2dp" >

    <ImageView
        android:id="@+id/navIcon"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/icon"
        android:gravity="center_vertical"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/navTitle"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/navIcon"
        android:layout_toRightOf="@+id/navIcon"
        android:gravity="center_vertical"
        android:minHeight="40sp"
        android:textColor="@color/cern_white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/navDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/navIcon"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:gravity="center_vertical"
        android:textColor="@color/cern_white"
        android:textSize="14sp" />

</RelativeLayout>